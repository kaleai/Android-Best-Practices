<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="kale.toolbox.ui.view.EasyToastActivity"
        >

        <Button
            android:id="@+id/show_short_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Short"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/show_long_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Long"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/show_custom_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Custom"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/show_in_thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show In Thread"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    
</layout>